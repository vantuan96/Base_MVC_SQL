@using Kztek.Web.Core.Extensions

@model Kztek.Model.Models.Student

@{
    ViewBag.Title = "Cập nhật người dùng";


}

<div class="page-header">
    <h1>
        @ViewBag.Title
    </h1>
</div>
<div class="row">
    @if (TempData["Success"] != null)
    {
        <strong style="color:green">@TempData["Success"]</strong>
    }
    <strong style="color:red">@ViewBag.Error</strong>
</div>
<div class="row">
    <div class="col-md-8 col-xs-12">
        <h3 class="header smaller lighter blue">Thông tin cơ bản</h3>
        @using (Html.BeginForm("Update", "Student", FormMethod.Post, new { encType = "multipart/form-data", @class = "form-horizontal" }))
        {
            @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Họ Và Tên <span style="color:red">*</span></label>
                <div class="col-sm-6 col-xs-12">
                    @Html.TextBoxFor(n => n.Fullname, new { @class = "form-control", @placeholder = "Họ và Tên " })
                    @Html.ValidationMessageFor(n => n.Fullname, "", new { @class = "text-danger" })


                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Email </label>
                <div class="col-sm-6 col-xs-12">
                    @Html.TextBoxFor(n => n.Email, new { @class = "form-control", @type = "phone" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Phone </label>
                <div class="col-sm-6 col-xs-12">
                    @Html.TextBoxFor(n => n.Phone, new { @class = "form-control", @type = "phone" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Ngày Sinh </label>
                <div class="col-sm-6 col-xs-12">
                    @Html.TextBoxFor(n => n.Birthday, new { @class = "form-control", @type = "birthday" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right">Giới tính</label>
                <div class="col-sm-6 col-xs-12">
                    @Html.DropDownListFor(n => n.Gender, Kztek.Model.Models.Student.GetGenderSelectItems(), "Select Gender")
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Kích hoạt </label>
                <div class="col-sm-6">
                    <label class="line-height-250">
                        @Html.CheckBoxFor(n => n.Active, new { @class = "ace", @checked = "true" })
                        <span class="lbl"></span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label no-padding-right"> Ảnh đại diện </label>
                <div class="col-sm-6">
                    <input type="file" name="file" id="file" />
                </div>

            </div>

            @Html.Action("Buttons", "Home", new { controller = "Student", action = "Update", url = ViewBag.urlValue })
        }
    </div>

</div>

@section scripts{
    <script>

    </script>
}